<!DOCTYPE html>
<html>
<head>
	<title>Appenings</title>
	<%= stylesheet_link_tag    "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
</head>
<body>
	<div class="topBarContainer">
		<div class="topBar">
			<span class="logo">Appenings</span>
			<%if current_user.present? %>
			<span class="username">
				<%= current_user.username %>
			</span>
			<% end %>
			<%= link_to "Log out", logout_path, :class => "logoutButton" %>
		</div>
	</div>

	<div id="container" class="container_12">
		<% if notice.present? %>
		<div class="notice"><p><%= notice %></p></div>
		<% end %>

		<% if alert.present? %>
		<div class="alert"><p><%= alert %></p></div>
		<% end %>


		<%= yield %>
	</div>
</body>
</html>
