<!DOCTYPE html>
<html>
<head>
	<title>Appenings</title>
	<%= stylesheet_link_tag    "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
</head>
<body>
	<div class="topBarContainer">
		<div class="topBar header">
			<% if current_user.present? %>
			<span class="logo">
				<%= link_to "Appenings", appenings_path %>
			</span>
			<div class="menu">
				<%= link_to "<i class='icon-group'></i>".html_safe, friends_path, :class => "friendButton" %>
				<%= link_to "<i class='icon-signout'></i>".html_safe, logout_path, :class => "logoutButton" %>
			</div>
			<% end %>

		</div>
	</div>

	<div id="container" class="container_16">
		<% if notice.present? %>
		<div class="notice"><p><i class="icon-ok-sign greenIcon"></i><%= notice %></p></div>
		<% end %>

		<% if alert.present? %>
		<div class="alert"><i class="icon-warning-sign redIcon"></i><p><%= alert %></p></div>
		<% end %>


		<%= yield %>
	</div>
</body>
</html>
