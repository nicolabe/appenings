<h1>Listing appenings for <%= current_user.username %></h1>

<%= link_to "Browse friends", friends_path %> | <%= link_to "Log out", logout_path %>
<br/>

<h3>Unfinished appenings</h3>
<% @appenings.each do |appening| %>

  <div class="appening">
    <b><%= appening.title %></b>
    <p><%= appening.body %></p>
    Started: <p><%= appening.created_at.strftime("%D") %></p>
    <%= link_to "Comment", new_appening_comment_path(appening_id: appening.id) %> |
    <%= link_to "Edit", edit_appening_path(appening) %>
    <%= button_to "Accomplished", accomplish_appening_path(appening) %>
    <% appening.comments_list.each do |comment| %> 
      <div class="comments">
        <%= comment.author %> wrote: <br/>
        <%= comment.text %><br/>
      </div>
    <% end %>
  </div>
  <hr/>

<% end %>

<br />

<%= link_to 'Create a new appening', new_appening_path %>

<h3>Accomplished appenings</h3>

<% @accomplished_appenings.each do |appening| %>

  <div class="appening">
    <b><%= appening.title %></b>
    <p><%= appening.body %></p>
    <% appening.comments_list.each do |comment| %> 
      <div class="comments">
        <%= comment.author %> wrote: <br/>
        <%= comment.text %><br/>
      </div>
    <% end %>
  </div>

<% end %>
